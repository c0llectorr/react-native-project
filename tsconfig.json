{
	"extends": "expo/tsconfig.base",
	"compilerOptions": {
		"strict": true,
		"module": "ESNext",
		"forceConsistentCasingInFileNames": true,
		"paths": {
			"@/*": ["./*"],
			"@components/*": ["./components/*"],
			"@assets/*": ["./assets/*"],
			"@screens/*": ["./app/*"],
			"@context/*": ["./context/*"],
			"@utils/*": ["./utils/*"],
			"@hooks/*": ["./hooks/*"]
		}
	},
	"include": ["**/*.ts", "**/*.tsx", ".expo/types/**/*.ts", "expo-env.d.ts"]
}